{{> header}}

<link rel="stylesheet" href="/css/bootstrap.min.css" />
<h1>Prijava</h1>


<form action="login" method="post" style="width:400px;">
  <div class="form-outline mb-4" >
       <label class="form-label" for="form2Example1">Uporabniško ime</label>
    <input type="text" name="username" placeholder="Uporabniško ime" required class="form-control" />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example2">Koda</label>
    <input type="password" name="password" placeholder="Geslo" required class="form-control" />
  </div>


  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4">Prijava</button>

  <!-- Register buttons -->
  <div class="text-center">
    <p>Brez računa? <a href="/users/register">Registracija</a></p>
  </div>
</form>